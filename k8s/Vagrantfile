# -*- mode: ruby -*-
# vi: set ft=ruby :

CTRL_MEMORY = 4096
CTRL_CPU = 2
WORKER_MEMORY = 6144
WORKER_CPU = 2
N_WORKERS = 2

# Generate dynamic inventory file
inventory_content = <<~INV
[control_plane]
ctrl ansible_host=192.168.56.100 ansible_user=vagrant ansible_ssh_private_key_file=.vagrant/machines/ctrl/virtualbox/private_key ansible_python_interpreter=/usr/bin/python3

[workers]
INV

(1..N_WORKERS).each do |i|
  inventory_content += "node-#{i} ansible_host=192.168.56.#{100 + i} ansible_user=vagrant ansible_ssh_private_key_file=.vagrant/machines/node-#{i}/virtualbox/private_key ansible_python_interpreter=/usr/bin/python3\n"
end

inventory_content += <<~INV

[kubernetes:children]
control_plane
workers
INV


Dir.mkdir("inventory") unless Dir.exist?("inventory")
File.write("inventory/hosts.ini", inventory_content)

Vagrant.configure("2") do |config|
  config.vm.box = "bento/ubuntu-24.04"
  config.vm.box_version = "202510.26.0"
  config.vm.synced_folder "../team8-app", "/home/vagrant/team8-app"

  # Control node
  config.vm.define "ctrl" do |ctrl|
    ctrl.vm.hostname = "ctrl"
    ctrl.vm.network "private_network", ip: "192.168.56.100"
    ctrl.vm.provider "virtualbox" do |v|
      v.memory = CTRL_MEMORY
      v.cpus = CTRL_CPU
    end
  end

  # Worker nodes 
  (1..N_WORKERS).each do |i|
    config.vm.define "node-#{i}" do |node|
      node.vm.hostname = "node-#{i}"
      node.vm.network "private_network", ip: "192.168.56.#{100 + i}"
      node.vm.provider "virtualbox" do |v|
        v.memory = WORKER_MEMORY
        v.cpus = WORKER_CPU
      end

      # Only trigger provisioning after all VMs are up
      if i == N_WORKERS
        node.vm.provision :ansible do |ansible|
          ansible.limit = "all"
          ansible.playbook = "playbooks/general.yaml"
          ansible.inventory_path = "inventory/hosts.ini"
          ansible.become = true
          ansible.extra_vars = { "nodes" => N_WORKERS }
          ansible.compatibility_mode = "2.0"
        end

        node.vm.provision :ansible do |ansible|
          ansible.limit = "control_plane"
          ansible.playbook = "playbooks/ctrl.yaml"
          ansible.inventory_path = "inventory/hosts.ini"
          ansible.become = true
          ansible.compatibility_mode = "2.0"
        end

        node.vm.provision :ansible do |ansible|
          ansible.limit = "workers"
          ansible.playbook = "playbooks/node.yaml"
          ansible.inventory_path = "inventory/hosts.ini"
          ansible.become = true
          ansible.compatibility_mode = "2.0"
        end
      end
    end
  end

end